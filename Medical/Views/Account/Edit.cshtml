@model Medical.Models.EditUserVM

@{
    ViewBag.ActiveItem = $"{Model.Role}s";
    ViewData["Title"] = "Update User";
}

<div class="page-header w-100 border-start ps-2 border-3 border-primary mb-4">
    <div class="">
        <div class="page-title text-start fs-6 fw-bold">@Model.Role<span class="fw-normal text-muted ms-2">Edit</span></div>
    </div>
</div>
<!-- contaner of form add clients -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header border-bottom-0">
                <h4 class="card-title">Edting Form</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-controller="Account" enctype="multipart/form-data">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" asp-validation-summary="All"></div>
                    }
                    <div class="d-flex flex-column gap-3">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label mb-1">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserName" class="form-label mb-1">UserName</label>
                            <input asp-for="UserName" class="form-control" placeholder="Enter User Name">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        @if (Model.Role == UserRole.Doctor)
                        {
                            <div class="form-group">
                                <label asp-for="Specification" class="form-label mb-1">Specification</label>
                                <input asp-for="Specification" class="form-control" placeholder="Enter Specification">
                                <span asp-validation-for="Specification" class="text-danger"></span>
                            </div>
                        }
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="form-label mb-1">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="form-label mb-1">E-mail</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NationalId" class="form-label mb-1">National ID</label>
                            <input asp-for="NationalId" class="form-control" placeholder="Enter National ID">
                            <span asp-validation-for="NationalId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="form-label mb-1">Address</label>
                            <input asp-for="Address" class="form-control" placeholder="Enter Address">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BirthDate" class="form-label mb-1">Birth Date</label>
                            <input asp-for="BirthDate" type="date" class="form-control" placeholder="Enter Birth Date">
                            <span asp-validation-for="BirthDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Gender" class="form-label mb-1">Gender</label>
                            <select asp-for="Gender" class="form-control">
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group" id="Password-toggle">
                            <label asp-for="Password" class="form-label mb-1">Password</label>
                            <div class="input-group">
                                <a href="" class="input-group-text">
                                    <i class="fe fe-eye-off" aria-hidden="true"></i>
                                </a>
                                <input asp-for="Password" class="form-control" type="password" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Image" class="form-label mb-1">Picture</label>
                            <input asp-for="Image" class="form-control" type="file" accept=".jpg, .jpeg, .png" placeholder="Enter image">
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                    </div>
                    <button name="submit" class="btn btn-info btn-block mt-4" type="submit">Edit</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End Row -->
@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}
